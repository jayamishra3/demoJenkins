// jenkins pipeline script
// pipeline with stages comiple, test, build and echo message in the stages
pipeline {
    agent any
    stages {
        stage('Compile') {
            steps {
                echo 'Compiling the code'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing the code'
            }
        }
        stage('Build') {
            steps {
                echo 'Building the code'
            }
        }
    }
}
